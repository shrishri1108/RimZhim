<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="2dp"
    android:layout_marginTop="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@color/white"
        >


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="10dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            app:shapeAppearance="@style/roundImg"
            tools:srcCompat="@drawable/profile_photo_img" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingStart="5dp"
            android:paddingTop="10dp">
            <TextView
                android:layout_width="175dp"
                android:layout_height="match_parent"
                android:text="Contestant"
                android:textSize="12sp"
                android:id="@+id/contestantName"
                android:gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Video Link"
                    android:textSize="12sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="username"
                    android:id="@+id/videoLink"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:textSize="12sp"/>



            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In Winning Zone"
                android:id="@+id/InWinningZon"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:visibility="gone"
                android:textSize="12sp"/>


        </LinearLayout>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7875"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:id="@+id/vote"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="#90"
            android:id="@+id/rank"
            android:textSize="12sp"
            android:paddingEnd="20dp"

            android:gravity="end|center_vertical"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>